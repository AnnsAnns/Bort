---
import { getCollection } from "astro:content";
import ClickToSeeMore from '../components/ClickToSeeMore.astro';

import Box from '../components/Box.astro';

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const newestPost = posts[0];

---

<a class="" href={`/blog/${newestPost.slug}`}>
    <Box title="ðŸ“° Latest Blog Post" createRandomness>
        <div class='font-headerf text-lg'>
          {newestPost.data.title}
        </div>
        <div class='text-base-text-color/60 text-sm'>
          {newestPost.data.description}
        </div>
        <ClickToSeeMore/>
      </Box>
</a>