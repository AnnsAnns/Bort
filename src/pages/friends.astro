---

<BaseLayout title='Friends' desc='A list of cool people 😎'>
<div class='
        grid
        xl:grid-cols-3
        md:grid-cols-2
        4k:grid-cols-4
        grid-cols-1
        grid-flow-row-dense
        gap-4
        lg:py-8
        content-start
        justify-between
        sm:overflow-y-scroll
        h-full
        items-center
        pr-4
        scrollbar-thin
        scrollbar-track-base-background-color
        scrollbar-thumb-box-color-standard
      '>    
{
    FRIENDS_LIST.map(friend => {
        return (
            <a 
                id={friend.url}
                href={friend.url}
                class='max-w-full grow'>
                <Box
                    title={`${friend.special_emoji !== undefined ? friend.special_emoji : ""} ${friend.name}`}
                    className={`text-center h-full`}
                    createRandomness
                >
                    <div class='p-1 gap-2 flex justify-center flex-col items-center'>
                        <div class='pt-2 text-center text-ellipsis'>
                            {friend.desc}
                        </div>
                        <div class="text-sm text-base-text-color/60">
                            [Click to visit {friend.url.replace("https://", "")}]    
                        </div>
                    </div>
                </Box>
            </a>
        )
    })
